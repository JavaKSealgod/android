<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="275dp"
    android:background="@drawable/exit"
    tools:context=".exit_app">

    <Button
        android:id="@+id/exit_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="215sp"
        android:background="@drawable/okok"
        android:onClick="login_out"
        />

    <Button
        android:id="@+id/exit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_no"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215sp"
        android:onClick="login_no"
        />

</LinearLayout>