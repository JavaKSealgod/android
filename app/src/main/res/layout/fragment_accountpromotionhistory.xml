<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:background="@color/GridBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_dropdown_7a6eea477f"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/Column1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_margin"
            android:gravity="center"
            android:textColor="@color/GridfontColor"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/Column2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_margin"
            android:gravity="center"
            android:textColor="@color/GridfontColor"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/Column3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_margin"
            android:gravity="center"
            android:textColor="@color/GridfontColor"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/itemChild"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Column7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="入款优惠名称"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>

            <TextView
                android:id="@+id/Column8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="优惠"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>

            <TextView
                android:id="@+id/Column9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="流水"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Column4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>
            <TextView
                android:id="@+id/Column5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>
            <TextView
                android:id="@+id/Column6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gridChild_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/GridfontColor"
                android:background="@drawable/gridtextcolors"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
