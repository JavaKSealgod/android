<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:background="@color/GridBackgroundColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/Column1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/Column2"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/Column3"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/Column4"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/Column5"
        android:gravity="center"
        android:layout_width="65dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />


    <TextView
        android:id="@+id/Column6"
        android:gravity="center"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/gridChild_margin"
        android:textColor="@color/GridfontColor"
        android:background="@drawable/gridtextcolors"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
